<UserControl
  x:Class="TcOpen.Inxton.Local.Security.Wpf.InsufficientRightsBox"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:TcOpen.Inxton.Local.Security.Wpf"
  xmlns:p="clr-namespace:TcOpen.Inxton.Local.Security.Wpf.Properties"
  mc:Ignorable="d"
  d:DesignHeight="450"
  d:DesignWidth="800"
>
    <d:UserControl.DataContext>
        <local:InsufficientRightsBoxViewModel />
    </d:UserControl.DataContext>
    <Grid>
        <ContentControl>
            <ContentControl
        Content="{Binding ProtectedContent}"
        Padding="20"
        Background="Red"
      />
        </ContentControl>
        <Button
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      Command="{Binding OpenLoginWindowCommand}"
      Content="{x:Static p:strings.Login}"
    />
    </Grid>
</UserControl>
