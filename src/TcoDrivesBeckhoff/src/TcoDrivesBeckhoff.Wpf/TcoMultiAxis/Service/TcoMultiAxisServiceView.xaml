                    IsReadOnly="True"
                    Width="10"
                  />
                                        <DataGridTextColumn
                    IsReadOnly="True"
                    Header="Symbol"
                    Binding="{Binding Symbol}"
                  />
                                    </DataGrid.Columns>
                                </DataGrid>


                                <WrapPanel
                Grid.Row="3"
                HorizontalAlignment="Center"
              >
                                    <WrapPanel.Resources>
                                        <Style
                    TargetType="Button"
                    BasedOn="{StaticResource MaterialDesignFlatMidBgButton}"
                  >
                                            <Setter
                      Property="Margin"
                      Value="5"
                    />
                                            <Setter
                      Property="MinWidth"
                      Value="100"
                    />

                                        </Style>
                                        <Style
                    TargetType="TextBox"
                    BasedOn="{StaticResource MaterialDesignTextBox}"
                  >
                                            <Setter
                      Property="Margin"
                      Value="5"
                    />
                                            <Setter
                      Property="VerticalAlignment"
                      Value="Center"
                    />

                                        </Style>
                                        <Style
                    TargetType="TextBlock"
                    BasedOn="{StaticResource MaterialDesignTextBlock}"
                  >
                                            <Setter
                      Property="Margin"
                      Value="5"
                    />
                                            <Setter
                      Property="VerticalAlignment"
                      Value="Center"
                    />

                                        </Style>
                                    </WrapPanel.Resources>

                                    <Button
                  Command="{Binding TeachPositionCommand}"
                  Content="{x:Static p:strings.Teach}"
                />

                                    <WrapPanel
                  Grid.Row="2"
                  Grid.Column="0"
                  HorizontalAlignment="Center"
                >
                                        <WrapPanel.Resources>

                                        </WrapPanel.Resources>
                                        <TextBlock
                    Text="{Binding Component._axis1.AttributeName}"
                    Visibility="{Binding DataContext.Component._config.Axis1Disabled.Cyclic,
                                                            Source={StaticResource ProxyElement}, Converter={vortex:BooleanToVisibilityConverter},ConverterParameter=true}"
                  />
                                        <CheckBox
                    IsChecked="{Binding Axis1MoveAllowed}"
                    Visibility="{Binding DataContext.Component._config.Axis1Disabled.Cyclic,
                                                            Source={StaticResource ProxyElement}, Converter={vortex:BooleanToVisibilityConverter},ConverterParameter=true}"
                  />
                                        <TextBlock
                    Text="{Binding Component._axis2.AttributeName}"
                    Visibility="{Binding DataContext.Component._config.Axis2Disabled.Cyclic,
                                                            Source={StaticResource ProxyElement}, Converter={vortex:BooleanToVisibilityConverter},ConverterParameter=true}"
                  />
                                        <CheckBox
                    IsChecked="{Binding Axis2MoveAllowed}"
                    Visibility="{Binding DataContext.Component._config.Axis2Disabled.Cyclic,
                                                            Source={StaticResource ProxyElement}, Converter={vortex:BooleanToVisibilityConverter},ConverterParameter=true}"
                  />
                                        <TextBlock
                    Text="{Binding Component._axis3.AttributeName}"
                    Visibility="{Binding DataContext.Component._config.Axis3Disabled.Cyclic,
                                                            Source={StaticResource ProxyElement}, Converter={vortex:BooleanToVisibilityConverter},ConverterParameter=true}"
                  />
                                        <CheckBox
                    IsChecked="{Binding Axis3MoveAllowed}"
                    Visibility="{Binding DataContext.Component._config.Axis3Disabled.Cyclic,
                                                            Source={StaticResource ProxyElement}, Converter={vortex:BooleanToVisibilityConverter},ConverterParameter=true}"
                  />
                                        <TextBlock
                    Text="{Binding Component._axis4.AttributeName}"
                    Visibility="{Binding DataContext.Component._config.Axis4Disabled.Cyclic,
                                                            Source={StaticResource ProxyElement}, Converter={vortex:BooleanToVisibilityConverter},ConverterParameter=true}"
                  />
                                        <CheckBox
                    IsChecked="{Binding Axis4MoveAllowed}"
                    Visibility="{Binding DataContext.Component._config.Axis4Disabled.Cyclic,
                                                            Source={StaticResource ProxyElement}, Converter={vortex:BooleanToVisibilityConverter},ConverterParameter=true}"
                  />


                                        <Button
                    Command="{Binding MoveToPositionCommand}"
                    Content="{x:Static p:strings.MoveToPosition}"
                  />


                                    </WrapPanel>

                                    <WrapPanel
                  Grid.Row="2"
                  Grid.Column="0"
                  HorizontalAlignment="Center"
                >
                                        <WrapPanel.Resources>

                                        </WrapPanel.Resources>
                                        <TextBlock
                    Text="{x:Static p:strings.Vel}"
                  />
                                        <TextBox
                    IsEnabled="True"
                    Text="{Binding DefaultValues.Velocity , Mode=TwoWay}"
                  />
                                        <TextBlock
                    Text="{x:Static p:strings.Acc}"
                  />
                                        <TextBox
                    Text="{Binding DefaultValues.Acceleration , Mode=TwoWay}"
                  />
                                        <TextBlock
                    Text="{x:Static p:strings.Dec}"
                  />
                                        <TextBox
                    Text="{Binding DefaultValues.Deceleration , Mode=TwoWay}"
                  />
                                        <TextBlock
                    Text="{x:Static p:strings.Jerk}"
                  />
                                        <TextBox
                    Text="{Binding DefaultValues.Jerk, Mode=TwoWay}"
                  />
                                        <Button
                    Command="{Binding FillDefaultParamsCommand}"
                    Content="{x:Static p:strings.WriteDefaultValues}"
                  />


                                    </WrapPanel>

                                </WrapPanel>

                            </Grid>

                        </GroupBox>

                    </WrapPanel>
                </Grid>
            <!--</ScrollViewer>-->
        </vortex:TcoComponentView.ComponentDetails>
    </vortex:TcoComponentView>
</UserControl>
