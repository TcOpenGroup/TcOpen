<UserControl
    x:Class="PlcAppExamples.ColorExample101"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TcoApplicationExamples.Wpf"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vortex="http://vortex.mts/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{x:Static local:App.PlcAppExamples}"
    mc:Ignorable="d">

    <StackPanel Margin="10">
        <TextBlock>
            <Run FontWeight="Bold">Welcome to TcOpen examples</Run>
            <LineBreak />
            <Run>First let's get started by a simple sequence</Run>
            <LineBreak />
            <Run>Follow the instruction on the sequence, turn on lights accordingly</Run>
            <LineBreak />
            <Run>Experiment with Step mode, step backward, forward.</Run>
        </TextBlock>
        <Separator Height="10" />
        <vortex:RenderableContentControl DataContext="{Binding MAIN_PRG._TcOpenTutorial.ColorExample}" />
    </StackPanel>
</UserControl>
