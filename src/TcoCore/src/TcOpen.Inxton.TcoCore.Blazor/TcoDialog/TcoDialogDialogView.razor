    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            //jsInterop.firstRenderComplete = true;
            ViewModel.DialogCloseEvent += OnDialogClosed;
        }
    }

    public async void OnDialogClosed()
    {
