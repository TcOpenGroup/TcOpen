<UserControl
  x:Class="PlcHammer.DriveSimServiceView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:plchammer="clr-namespace:PlcHammer;assembly=PlcHammerConnector"
  xmlns:vortex="http://vortex.mts/xaml"
  xmlns:local="clr-namespace:PlcHammer"
  mc:Ignorable="d"
  d:DesignHeight="450"
  d:DesignWidth="800"
>
    <d:UserControl.DataContext>
        <local:DriveSimServiceViewModel />
    </d:UserControl.DataContext>
    <StackPanel DataContext="{Binding Model}">
        <vortex:RenderableContentControl
      DataContext="{Binding _position}"
      PresentationType="DisplaySlim"
    />
        <vortex:RenderableContentControl
      DataContext="{Binding _moveAbsoluteTask._targetPosition}"
      PresentationType="ControlSlim"
    />
        <vortex:RenderableContentControl
      DataContext="{Binding _moveAbsoluteTask}"
      PresentationType="ProgressBar"
    />
    </StackPanel>
</UserControl>
