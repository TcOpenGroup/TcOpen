<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:wpf="clr-namespace:TcOpen.Inxton.TcoInspectors.Wpf"
>
    <wpf:InspectorsResultColorConverter x:Key="CheckerResultColorConverter" />
    <wpf:InspectorsResultDescriptionConverter
    x:Key="CheckerResultDescriptionConverter"
  />
    <ControlTemplate x:Key="ResultDisplay" TargetType="Label">
        <Border>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Ellipse
          Grid.Column="0"
          Width="25"
          Height="25"
          Margin="10,2,10,2"
          Fill="{TemplateBinding Background}"
          Stroke="Black"
        />
                <TextBlock
          Grid.Column="1"
          Margin="3"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Text="{TemplateBinding Content}"
        />
            </Grid>
        </Border>
    </ControlTemplate>
</ResourceDictionary>
