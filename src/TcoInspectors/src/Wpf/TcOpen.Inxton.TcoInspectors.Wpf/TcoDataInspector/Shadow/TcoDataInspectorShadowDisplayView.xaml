<UserControl x:Class="TcoInspectors.TcoDataInspectorShadowDisplayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TcoInspectors" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:tcoinspectors="clr-namespace:TcoInspectors;assembly=TcoInspectorsConnector" 
             xmlns:controls="http://vortex.mts/xaml" 
             xmlns:wpf="clr-namespace:TcOpen.Inxton.TcoInspectors.Wpf"              
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1000">
    <UserControl.Resources>
        <ResourceDictionary Source="/TcOpen.Inxton.TcoInspectors.Wpf;component/Converters/InspectorResourceDictionary.xaml"/>
    </UserControl.Resources>
    <d:UserControl.DataContext>
        <tcoinspectors:TcoDataInspector></tcoinspectors:TcoDataInspector>
    </d:UserControl.DataContext>
    <StackPanel>
        <Expander>
            <Expander.Header>
                <Grid Margin="5" Grid.IsSharedSizeScope="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="150" SharedSizeGroup="InspectorNameGroup" />
                        <ColumnDefinition Width="33*" />
                        <ColumnDefinition Width="33*" />
                        <ColumnDefinition Width="33*" />
                        <ColumnDefinition Width="33*"/>
                        <ColumnDefinition Width="33*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Margin="0,0,20,0" TextWrapping="WrapWithOverflow" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Text="{Binding Converter={controls:NameOrSymbolConverter}}"></TextBlock>
                    <controls:RenderableContentControl Grid.Column="1" DataContext="{Binding _data.RequiredStatus}" PresentationType="ShadowDisplaySlim"/>
                    <controls:RenderableContentControl Grid.Column="2" DataContext="{Binding _data.DetectedStatus}" PresentationType="ShadowDisplaySlim"/>
                    <controls:RenderableContentControl Grid.Column="3" DataContext="{Binding _data.StarNotationEnabled}" PresentationType="ShadowDisplaySlim"/>
                    <StackPanel Grid.Column="5">
                        <materialDesign:PackIcon HorizontalAlignment="Stretch" 
                                                 VerticalAlignment="Stretch"                                                  
                                                 Width="20"
                                                 Height="20"                                             
                                                 Kind="{Binding _data.Result.Shadow, Converter={wpf:InspectorsIconConverter}}" 
                                                 Background="Transparent"
                                                 Foreground="{Binding _data.Result.Shadow, Converter={wpf:InspectorsResultColorConverter}}"/>
                        <TextBlock FontSize="10" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" Text="{Binding _data.Result.Shadow, Converter={wpf:InspectorsResultDescriptionConverter}}"></TextBlock>
                    </StackPanel>
                </Grid>
            </Expander.Header>

            <local:GenericTcoInspectorDataView DataContext="{Binding _data}" PresentationType="ShadowDisplaySlim"></local:GenericTcoInspectorDataView>
        </Expander>

    </StackPanel>
</UserControl>
