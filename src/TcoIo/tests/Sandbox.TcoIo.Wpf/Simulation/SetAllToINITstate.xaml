<UserControl x:Class="Sandbox.TcoIo.Wpf.Simulation.SetAllToINITstate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sandbox.TcoIo.Wpf.Simulation"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding }" DataContextChanged="UserControl_DataContextChanged">
    <Grid>
        <StackPanel x:Name="stPanel" DataContext="{Binding }" >
            <Button x:Name="tbSetToInitState" DataContext="{Binding}" Click="SetToINITState_Click" Height="60">
                <Button.Content>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Set to INIT state:"/>
                        <TextBlock Grid.Row="1" x:Name="tbSymbol" FontSize="10"/>
                    </Grid>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
