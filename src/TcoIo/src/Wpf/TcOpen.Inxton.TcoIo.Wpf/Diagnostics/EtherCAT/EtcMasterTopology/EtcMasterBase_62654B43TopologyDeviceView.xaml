<UserControl
    x:Class="TcoIo.EtcMasterBase_62654B43TopologyDeviceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TcoIo"
    xmlns:disp="clr-namespace:TcOpen.Inxton.TcoIo.Wpf.Diagnostics.EtherCAT.Display"
    xmlns:dims="clr-namespace:TcOpen.Inxton.TcoIo.Wpf.Topology"
    xmlns:vortex="http://vortex.mts/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:TcoIo="clr-namespace:TcoIo;assembly=TcoIoConnector"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <d:UserControl.DataContext>
        <local:EtcMasterBase_62654B43TopologyDeviceView/>
    </d:UserControl.DataContext>
    <Border BorderBrush="White" BorderThickness="0,5,0,0">
        <Border BorderBrush="Black" BorderThickness="5">
            <StackPanel Height="{Binding Source={x:Static dims:TempDef.devHeight}}"  DataContext="{Binding Device}">
                <disp:StringDisplay Header="Device name" DataContext="{Binding AttributeName}"/>
                <disp:StringDisplay Header="Device type" DataContext="{Binding AttributeBoxType}"/>
                <vortex:RenderableContentControl DataContext="{Binding InfoData}" PresentationType="HWDiag" />
            </StackPanel>
        </Border>
    </Border>
</UserControl>
