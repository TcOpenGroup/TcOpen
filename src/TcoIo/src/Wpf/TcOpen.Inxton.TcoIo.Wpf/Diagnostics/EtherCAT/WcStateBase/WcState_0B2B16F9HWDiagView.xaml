<UserControl
  x:Name="userControl"
  x:Class="TcoIo.WcState_0B2B16F9HWDiagView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:TcoIo"
  xmlns:vortex="http://vortex.mts/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:TcoIo="clr-namespace:TcoIo;assembly=TcoIoConnector"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d"
>
    <d:UserControl.DataContext>
        <TcoIo:WcState_0B2B16F9 />
    </d:UserControl.DataContext>
    <StackPanel>
        <Grid Grid.IsSharedSizeScope="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="80" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
          x:Name="tbAttributeName"
          Grid.Column="0"
          Margin="0,5,5,0"
          Text="{Binding AttributeName}"
        />
                <vortex:RenderableContentControl
          x:Name="rccWcState"
          Grid.Column="1"
          DataContext="{Binding WcState}"
          PresentationType="DisplaySlim"
        />
            </Grid>
        </Grid>
    </StackPanel>
</UserControl>
