<UserControl
    x:Class="TcoCognexVision.TcoDataman_v_5_x_xServiceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TcoCognexVision"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tcoCore="http://vortex.mts/xaml"
    xmlns:tcocognexvision="clr-namespace:TcoCognexVision"
    mc:Ignorable="d">
    
    <d:UserControl.DataContext>
        <tcocognexvision:TcoDataman_v_5_x_xViewModel />
    </d:UserControl.DataContext>


    <StackPanel x:Name="datmanView">
        <!--Temporary list view until binding to ResultData inside TcoComponentView>>>>>>>>>>>>>>>>>>>>>>-->
        <StackPanel DataContext ="{Binding ElementName=datmanView, Path=DataContext, Mode=TwoWay}">
            <ListView x:Name="lv1" MouseRightButtonUp="ResultData_MouseRightButtonUp"      
                                MinWidth="200"                        
                                Margin="10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                ItemsSource="{Binding ResultData}">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Label
                                        Margin="-5,-5,-12,-5"
                                        HorizontalAlignment="Center"
                                        Content="{Binding Index}" />
                        <Label
                                        Margin="-5,-5,-12,-5"
                                        HorizontalAlignment="Center"
                                        Content="{Binding Data}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </StackPanel>
        <!-->>>>>>>>>>Temporary list view until binding to ResultData inside TcoComponentView-->

        <tcoCore:TcoComponentView x:Name="componentView" >
            <tcoCore:TcoComponentView.ComponentHeader>
                <WrapPanel HorizontalAlignment="Right" x:Name="componentViewWrap">
                <WrapPanel.Resources>
                    <Style TargetType="StackPanel">
                        <Setter Property="MinWidth" Value="250"/>
                    </Style>
                </WrapPanel.Resources>
                    <StackPanel DataContext ="{Binding ElementName=datmanView, Path=DataContext}" x:Name="componentViewStack">
                        <WrapPanel>
                            <ListView MouseRightButtonUp="ResultData_MouseRightButtonUp" x:Name="componentViewList"   
                                MinWidth="200"                        
                                Margin="10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                ItemsSource="{Binding ResultData}">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <Label
                                            Margin="-5,-5,-12,-5"
                                            HorizontalAlignment="Center"
                                            Content="{Binding Index}" />
                                        <Label
                                            Margin="-5,-5,-12,-5"
                                            HorizontalAlignment="Center"
                                            Content="{Binding Data}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </WrapPanel>
                </StackPanel>
            </WrapPanel>
        </tcoCore:TcoComponentView.ComponentHeader>
            <tcoCore:TcoComponentView.ComponentDetails>
            <StackPanel>
                <tcoCore:RenderableContentControl DataContext="{Binding _status.ActionDescription}"/>
                    <UniformGrid Rows="0" Columns="2">
                        <tcoCore:RenderableContentControl Margin="10" MinWidth="200" DataContext="{Binding _readTask}" />
                        <tcoCore:RenderableContentControl Margin="10" MinWidth="200" DataContext="{Binding _clearResultDataTask}" />
                    </UniformGrid>
            </StackPanel>
        </tcoCore:TcoComponentView.ComponentDetails>
        </tcoCore:TcoComponentView>
    </StackPanel>
</UserControl>
