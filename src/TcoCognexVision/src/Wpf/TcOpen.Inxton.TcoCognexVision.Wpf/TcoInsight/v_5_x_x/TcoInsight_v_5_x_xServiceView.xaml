<UserControl
  x:Class="TcoCognexVision.TcoInsight_v_5_x_xServiceView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:TcoCognexVision"
  xmlns:conv="clr-namespace:TcoCognexVision.Converters"
  xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:tcoCore="http://vortex.mts/xaml"
  xmlns:p="clr-namespace:TcOpen.Inxton.TcoCognexVision.Wpf.Properties"
  xmlns:tcocognexvision="clr-namespace:TcoCognexVision"
  mc:Ignorable="d"
>

    <d:UserControl.DataContext>
        <tcocognexvision:TcoInsight_v_5_x_xViewModel />
    </d:UserControl.DataContext>
    <UserControl.Resources>
        <ItemsPanelTemplate x:Key="HorizontalWraped">
            <WrapPanel
        Background="Transparent"
        Width="{Binding (FrameworkElement.ActualWidth) , RelativeSource={RelativeSource AncestorType=ScrollContentPresenter}}"
        MinWidth="{Binding ItemWidth , RelativeSource={RelativeSource Self}}"
        ItemHeight="{Binding (ListView.View).ItemHeight , RelativeSource={RelativeSource AncestorType=ListView}}"
        ItemWidth="{Binding (ListView.View).ItemWidth , RelativeSource={RelativeSource AncestorType=ListView}}"
      />
        </ItemsPanelTemplate>
    </UserControl.Resources>
    <StackPanel>
        <tcoCore:TcoComponentView>
            <tcoCore:TcoComponentView.ComponentHeader>
                <WrapPanel
          VerticalAlignment="Center"
          HorizontalAlignment="Left"
        >
                    <tcoCore:RenderableContentControl
            DataContext="{Binding Component._triggerTask}"
            Margin="5,0"
            PresentationType="Base"
          />
                    <tcoCore:RenderableContentControl
            DataContext="{Binding Component._restoreTask}"
            Margin="5,0"
            PresentationType="Base"
          />


                    <WrapPanel
            VerticalAlignment="Center"
            DataContext="{Binding Component._profinetReady}"
            Visibility="{Binding Cyclic, Converter={tcoCore:BooleanToVisibilityConverter} ,ConverterParameter=true}"
            Margin=" 5,0"
          >
                        <materialDesign:PackIcon
              Kind="AlertBox"
              Foreground="{StaticResource Errors}"
              VerticalAlignment="Center"
            />
                        <TextBlock
              VerticalAlignment="Center"
              Text="{x:Static p:strings.PnError}"
              Foreground="{StaticResource Errors}"
            />
                    </WrapPanel>
                </WrapPanel>
            </tcoCore:TcoComponentView.ComponentHeader>
            <tcoCore:TcoComponentView.ComponentDetails>
                <Grid DataContext="{Binding }">
                    <Grid.Resources>
                        <Style
              TargetType="GroupBox"
              BasedOn="{StaticResource MaterialDesignCardGroupBox}"
            >
                            <Setter Property="Margin" Value="5,0,0,5" />
                        </Style>
                        <Style TargetType="WrapPanel">
                            <Setter Property="MinWidth" Value="300" />

                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition />

                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition />


                    </Grid.RowDefinitions>

                    <GroupBox
            Grid.ColumnSpan="2"
            Padding="10"
            Header="{x:Static p:strings.Tasks}"
          >
                        <ItemsControl
              ItemsPanel="{StaticResource HorizontalWraped}"
              HorizontalAlignment="Left"
              ItemsSource="{Binding Component.Tasks}"
            >

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <tcoCore:RenderableContentControl
                    MinWidth="150"
                    DataContext="{Binding Component}"
                    Margin="5"
                  />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </GroupBox>


                    <Grid Grid.Row="1" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel
              Orientation="Horizontal"
              Margin="5"
              MinWidth="150"
            >
                            <RadioButton
                Margin="5,0"
                Height="25"
                GroupName="DisplayFormat"
                Checked="aButton_Decimal"
              >Decimal</RadioButton>
                            <RadioButton
                Margin="5,0"
                Height="25"
                GroupName="DisplayFormat"
                Checked="aButton_HexDecimal"
              >Hexadecimal</RadioButton>
                            <RadioButton
                Margin="5,0"
                IsChecked="True"
                Height="25"
                GroupName="DisplayFormat"
                Checked="aButton_String"
              >ASCII</RadioButton>
                        </StackPanel>
                        <WrapPanel Grid.Column="1">
                            <ListView ItemsSource="{Binding InspectionResults}">
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <Label
                        Margin="-5,-5,-12,-5"
                        HorizontalAlignment="Center"
                        Content="{Binding Index}"
                      />
                                            <Label
                        Margin="-5,-5,-12,-5"
                        HorizontalAlignment="Center"
                        Content="{Binding Data}"
                      />
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </WrapPanel>
                    </Grid>
                    <GroupBox
            Grid.Column="0"
            Grid.RowSpan="2"
            Padding="10"
            Grid.Row="2"
            DataContext="{Binding Component._status}"
            Header="{Binding AttributeName}"
          >
                        <GroupBox.Resources>
                            <Style
                TargetType="TextBox"
                BasedOn="{StaticResource MaterialDesignTextBox}"
              >
                                <Setter Property="MaxWidth" Value="200" />
                            </Style>
                        </GroupBox.Resources>
                        <tcoCore:RenderableContentControl
              DataContext="{Binding }"
              PresentationType="DisplaySlim"
            />
                    </GroupBox>
                    <WrapPanel Grid.Column="1" Grid.Row="2">
                        <GroupBox
              Padding="10"
              DataContext="{Binding Component._config}"
              Header="{Binding AttributeName}"
            >
                            <tcoCore:RenderableContentControl
                DataContext="{Binding }"
                PresentationType="ControlSlim"
              />
                        </GroupBox>
                        <GroupBox
              DataContext="{Binding Component}"
              Header="{x:Static p:strings.Job}"
            >
                            <StackPanel>
                                <tcoCore:RenderableContentControl
                  Grid.Row="2"
                  Grid.Column="0"
                  Margin="0,5,5,0"
                  MinWidth="200"
                  DataContext="{Binding _changeJobByNameTask._jobName}"
                  PresentationType="ControlSlim"
                />
                                <tcoCore:RenderableContentControl
                  Grid.Row="3"
                  Grid.Column="0"
                  Margin="0,5,5,0"
                  MinWidth="200"
                  DataContext="{Binding _changeJobByNameTask}"
                />
                                <tcoCore:RenderableContentControl
                  Grid.Row="2"
                  Grid.Column="1"
                  Margin="5,5,5,0"
                  MinWidth="200"
                  DataContext="{Binding _changeJobByNumberTask._jobNumber}"
                  PresentationType="ControlSlim"
                />
                                <tcoCore:RenderableContentControl
                  Grid.Row="3"
                  Grid.Column="1"
                  Margin="5,5,5,0"
                  MinWidth="200"
                  DataContext="{Binding _changeJobByNumberTask}"
                />

                            </StackPanel>
                        </GroupBox>

                        <GroupBox
              DataContext="{Binding Component}"
              Header="{x:Static p:strings.SoftEvent}"
            >
                            <StackPanel>
                                <tcoCore:RenderableContentControl
                  Grid.Row="2"
                  Grid.Column="2"
                  Margin="5,5,5,0"
                  MinWidth="200"
                  DataContext="{Binding _softEventTask._softEventNumber}"
                  PresentationType="ControlSlim"
                />
                                <tcoCore:RenderableContentControl
                  Grid.Row="3"
                  Grid.Column="2"
                  Margin="5,5,5,0"
                  MinWidth="200"
                  DataContext="{Binding _softEventTask}"
                />
                            </StackPanel>
                        </GroupBox>

                        <GroupBox
              Visibility="{Binding Component._config.ShowResultsData.Cyclic,Converter={StaticResource BooleanToVisibilityConverter}}"
              Padding="10"
              Header="{Binding Component._results.AttributeName}"
            >
                            <ScrollViewer
                MaxHeight="300"
                DataContext="{Binding Component._results}"
              >
                                <tcoCore:DynamicTreeView
                  DataContext="{Binding }"
                />

                            </ScrollViewer>
                        </GroupBox>
                        <GroupBox
              Visibility="{Binding Component._config.ShowUserData.Cyclic,Converter={StaticResource BooleanToVisibilityConverter}}"
              Padding="10"
              Header="{Binding Component._userData.AttributeName}"
            >

                            <ScrollViewer
                MaxHeight="300"
                DataContext="{Binding Component._userData}"
              >
                                <tcoCore:DynamicTreeView
                  DataContext="{Binding }"
                />

                            </ScrollViewer>
                        </GroupBox>
                    </WrapPanel>

                </Grid>

            </tcoCore:TcoComponentView.ComponentDetails>
        </tcoCore:TcoComponentView>
